modules = ["python-3.11"]

[nix]
channel = "stable-25_05"
packages = ["ffmpeg-full", "freetype", "glibcLocales", "imagemagickBig", "lcms2", "libGL", "libGLU", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "tcl", "tk", "zlib"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Instagram Video Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "streamlit_app"

[[workflows.workflow]]
name = "Instagram Video Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run app.py --server.port 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "streamlit_app"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "uv add moviepy opencv-python requests"

[[ports]]
localPort = 5000
externalPort = 80
